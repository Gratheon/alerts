{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": ".",
  "testMatch": ["<rootDir>/*.test.ts"],
  "testTimeout": 60000,
  "maxWorkers": 1,
  "collectCoverageFrom": ["<rootDir>/../../src/**/*.ts"],
  "coveragePathIgnorePatterns": ["/node_modules/", "/test/", "/.test.ts$/"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../../src/$1"
  }
}
